body
    background #06032a
    font-family Arial
    overflow hidden
    
    form
        background none
        width 25vw
        height 20vh
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
            
       input[type="text"]
           background #4d4dfe
           border-radius 8vh
           display inline-block
           position absolute
           width 25vw
           height 5vw
           bottom 0x
           left 50%
           transform translate(-50%)
           color #06032a
           padding  20px
           
       .button
           width 3vw
           height 3vw
           position absolute
           right 15%
           bottom 1vw 
           
       .button::after
           content ""
           position absolute
           right 0
           bottom 0
           background url(../images/arrow.svg)
           background-size contain
           background-repeat no-repeat
           width 100%
           height 100%
           
       
       p
           position absolute
           top 0%
           left 50%
           font-size 3vw
           width 100%
           transform translate(-50%)
           color #4d4dfe
           text-align center 
       
    .audio
        display none
        
        .text
            position absolute
            top 50%
            left 50%
            transform translate(-50%,-50%)
            font-size 11vw
            color #06032a
            user-select none

        .line
            width 1vw
            height 80vh
            position absolute
            top 50%
            transform translate(-50%,-50%) scale(0)
            border-radius 2vw / 6vw

        for i in (1..99)
            .line:nth-child( { i } )
                left (0 + i) vw

        for i in (1..50)
            .line:nth-child( { i } )
                background  hsl(240, (50 + i)%, 65%)

        for i in (51..99)
            .line:nth-child( { i } )
                left (i) vw
                background  hsl(240, (100 - (i - 50 ))%, 65%)
